#include <iostream> //header file
using namespace std; //

int main(){
	int num=0;
	
	cout << "숫자를 입력하세요." << endl;
		//'endl' is as same as '\n'.
	
	cin >>num;
		//'cin >>' means computer is waiting for keyborad input.
	
	cout <<"the number is "<< num<< endl;
		//this code print the num.
		
	const int num1=5;
		//if you use const, you can't change the variable.
	
	
	/*shift operator: <<(left shift operator), >>(right shift operator)
	5>>2 =
		5= 00000000000000101
		>>2
		1  00000000000010100
	*/
	
	int a1;
	char ans;
	
	cout <<"정수를 입력하세요"<<endl;
	cin>> a1;
	
	ans= (a1==1) ? 'A' : 'B';
		//if true ans='A', else ans='B'.
	cout << ans << endl;
	return 0;
}
